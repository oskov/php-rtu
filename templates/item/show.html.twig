{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ item.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ item.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ item.price }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ item.image }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ item.description }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ item.category }}</td>
        </tr>
        <tr>
            <th>Count</th>
            <td>{{ item.count }}</td>
        </tr>
        </tbody>
    </table>

    <a class="button" href="{{ path('item_index') }}">back to list</a>

    <a class="button" href="{{ path('item_edit', {'id': item.id}) }}">edit</a>

    {{ include('item/_delete_form.html.twig') }}
